<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.theday.user.dao.UserDAO">
 	<insert id="insertUser">
 		INSERT INTO `user`
 		(
	 		`loginId`
	 		,`password`
	 		,`name`
	 		,`birth`
	 		,`gender`
	 		,`profileImage`
	 		,`date`
	 		,`createdAt`
	 		,`updatedAt`
 		)
 		VALUES
 		(
 			#{loginId}
 			,#{password}
 			,#{name}
 			,#{birth}
 			,#{gender}
 			,#{profileImage}
 			,#{date}
 			,NOW()
 			,NOW()
 		)
 		
 	</insert>
 	
 	<select id="existLoginId" parameterType="String" resultType="boolean">
 		SELECT
 			COUNT(*)
 		FROM
 			`user`
 		WHERE
 			`loginId` = #{loginId}
 	</select>
 	
 	<select id="selectUserByLoginIdPassword" parameterType="map" resultType="com.theday.user.model.User">
 		SELECT
 			`id`
 			,`loginId`
	 		,`password`
	 		,`name`
	 		,`birth`
	 		,`gender`
	 		,`profileImage`
	 		,`date`
	 		,`createdAt`
	 		,`updatedAt`
 		FROM
 			`user`
 		WHERE
 			`loginId` = #{loginId}
 			AND `password` = #{password}
 	</select>
 	
 	<select id="selectUserListById"  resultType="com.theday.user.model.User" >
 		SELECT
 			`id`
 			,`loginId`
	 		,`password`
	 		,`name`
	 		,`birth`
	 		,`gender`
	 		,`profileImage`
	 		,`date`
	 		,`createdAt`
	 		,`updatedAt`
 		FROM
 			`user`
 	</select>
 	
 	<select id="selectUserByLoginId" resultType="com.theday.user.model.User" parameterType="String">
 		SELECT
 			`id`
 			,`loginId`
	 		,`password`
	 		,`name`
	 		,`birth`
	 		,`gender`
	 		,`profileImage`
	 		,`date`
	 		,`createdAt`
	 		,`updatedAt`
 		FROM
 			`user`
 		WHERE
 			`loginId` = #{loginId}
 	</select>
 </mapper>