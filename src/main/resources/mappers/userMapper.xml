<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.theday.user.dao.UserDAO">
 	<insert id="insertUser" >
 	
 		INSERT INTO `user`
 		(
	 		`loginId`
	 		,`password`
	 		,`name`
	 		,`birth`
	 		,`gender`
	 		,`profileImage`
	 		,`date`
	 		,`createdAt`
	 		,`updateddAt`
 		)
 		VALUES
 		(
 			#{loginId}
 			,#{password}
 			,#{name}
 			,#{birth}
 			,#{gender}
 			,#{profileImage}
 			,#{date}
 			,NOW()
 			,NOW()
 		)
 		
 	</insert>
 </mapper>